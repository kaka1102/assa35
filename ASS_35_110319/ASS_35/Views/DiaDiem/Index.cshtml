@using DataContext.DAL;
@using DataContext.Until;

@{
    var model = (List<DataContext.m_diadiemtochuc>)Model;
}


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutVi.cshtml";
}

<div class="sukien">
    <div class="tt">
        <span><a href="">Trang chủ > </a></span>
        <span><a href="">Địa điểm </a></span>
    </div>
    <div class="news-noidung">
        @if (model.Count > 0)
        {
            <div class="td-sukien venues-td">
                Địa điểm
            </div>
            <div class="row venues-nd">
                @foreach (var item in model)
                {

                    <div class="col-xs-12 col-sm-12 col-md-6">
                        <a href="@Html.Raw("dia-diem-chi-tiet/" + ConvertTextToLink.ConvertUrlsToLinks(item.tendiadiem) + "-" + item.id)">
                            <img src="@Html.Raw(item.avatar)" alt="">
                        </a>
                    </div>
                }
            </div>
        }
        else
        {
            <h3>Đang cập nhật</h3>
        }
    </div>

</div>

<section class="sec-below sec-below-trans">
    <div class="sec-above-bg">
        <div class="sec-above-bg-color">

        </div>
    </div>
</section>

