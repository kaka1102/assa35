    <button onclick="topFunction()" id="myBtn" title="Go to top"><i class="ti-angle-double-up"></i></button>

    <script type="text/javascript">
        $(function () {
            $(".vpause").click(function () {
                $(this).addClass("d-hide");
                $(this).parent().find(".vplay").removeClass("d-hide");
            });
            $(".vplay").click(function () {
                $(this).addClass("d-hide");
                $(this).parent().find(".vpause").removeClass("d-hide");
            });
        });
        $(function () {
            $(".sb-left ul li").click(function () {
                $(this).parent().find(".tb-left").removeClass("tb-active");
                $(this).find(".tb-left").addClass("tb-active");
            });
        });
        window.onscroll = function () { scrollFunction() };

        function scrollFunction() {
            if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
                document.getElementById("myBtn").style.display = "block";
            } else {
                document.getElementById("myBtn").style.display = "none";
            }
        }

        // When the user clicks on the button, scroll to the top of the document
        function topFunction() {
            document.body.scrollTop = 0;
            document.documentElement.scrollTop = 0;
        }
    </script>
