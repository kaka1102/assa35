@using DataContext.DAL;
@using DataContext.Until;
@{
    var model = (List<Video>)Model;

}

<div class="inform-vd inform-h">
    <a href="/hinh-anh">HÌNH ẢNH</a>
</div>
@if (model.Count > 0)
{

    <div class="ctds-h">
        @if (model.Count >= 4)
        {
            for (int i = 0; i < 4; i++)
            {
                <div class="dt-h col-md-3 col-sm-6">
                    <a href="@Html.Raw("lib-image/" + ConvertTextToLink.ConvertUrlsToLinks(model[i].tenchude) + "-" + model[i].id)">
                        <img src="@Html.Raw(model[i].link)" alt="">
                    </a>
                    <div class="dt-nd">
                        <span><a href="@Html.Raw("lib-image/" + ConvertTextToLink.ConvertUrlsToLinks(model[i].tenchude) + "-" + model[i].id)" title="@Html.Raw(model[i].tenchude)">@Html.Raw(model[i].tenchude)</a></span>
                    </div>
                </div>
            }
        }
        else
        {
            foreach (var item in model)
            {
                <div class="dt-h col-md-3 col-sm-6">
                    <a href="@Html.Raw("lib-image/" + ConvertTextToLink.ConvertUrlsToLinks(item.tenchude) + "-" + item.id)">
                        <img src="@Html.Raw(item.link)" alt="">
                    </a>
                    <div class="dt-nd">
                        <span><a href="@Html.Raw("lib-image/" + ConvertTextToLink.ConvertUrlsToLinks(item.tenchude) + "-" + item.id)" title="@Html.Raw(item.tenchude)">@Html.Raw(item.tenchude)</a></span>
                    </div>
                </div>
            }
        }
    </div>
}
else
{
    <div class="ctds-h">
        <h3>Đang cập nhật</h3>
    </div>
}

