@using DataContext.DAL;
@using DataContext.Until;
@{
    var model = (List<DetailsPost>)Model;
}


<ol class="carousel-indicators slider-t">
    @if (model.Count > 0)
    {
        if (model.Count >= 5)
        {
            for (int i = 0; i < 5; i++)
            {
                <li data-target="#myCarousel" data-slide-to="@Html.Raw(i)" class="@Html.Raw(i==0?"active":"")"></li>
            }
        }
        else
        {
            for (int i = 0; i < model.Count; i++)
            {
                <li data-target="#myCarousel" data-slide-to="@Html.Raw(i)" class="@Html.Raw(i==0?"active":"")"></li>
            }
        }
    }
    else
    {
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
        <li data-target="#myCarousel" data-slide-to="4"></li>
    }
</ol>

<!-- Wrapper for slides -->
<div class="carousel-inner ">
    @if (model.Count > 0)
    {
        if (model.Count >= 5)
        {
            for (int i = 0; i < 5; i++)
            {
                <div class="item item-slider-top @Html.Raw(i==0?"active":"")">
                    <a href="@Html.Raw("chi-tiet/" + ConvertTextToLink.ConvertUrlsToLinks(model[i].tieude) + "-" + model[i].id)"><img src="@Html.Raw(model[i].avatar)"></a>


                    <div class="d-slider">
                        <div class="run-slider marquee @Html.Raw("item" + i)">
                            <a class="marquee-text" href="@Html.Raw("chi-tiet/" + ConvertTextToLink.ConvertUrlsToLinks(model[i].tieude) + "-" + model[i].id)">@Html.Raw(model[i].tieude)</a>
                        </div>
                    </div>
                </div>

            }
        }
        else
        {
            for (int i = 0; i < model.Count; i++)
            {
                <div class="item item-slider-top @Html.Raw(i==0?"active":"")">
                    <a href="@Html.Raw("chi-tiet/" + ConvertTextToLink.ConvertUrlsToLinks(model[i].tieude) + "-" + model[i].id)"><img src="@Html.Raw(model[i].avatar)"></a>
                    <div class="d-slider">
                        <div class="run-slider marquee @Html.Raw("item" + i)">
                            <a class="marquee-text" href="@Html.Raw("chi-tiet/" + ConvertTextToLink.ConvertUrlsToLinks(model[i].tieude) + "-" + model[i].id)">@Html.Raw(model[i].tieude)</a>
                        </div>
                    </div>
                </div>
            }
        }
    }
    else
    {
        <div class="item active">
            <img src="~/images/banner.jpg" alt="Los Angeles">
        </div>

        <div class="item">
            <img src="~/images/banner.jpg" alt="Los Angeles">
        </div>

        <div class="item">
            <img src="~/images/banner.jpg" alt="Los Angeles">
        </div>
        <div class="item">
            <img src="~/images/banner.jpg" alt="Los Angeles">
        </div>

        <div class="item">
            <img src="~/images/banner.jpg" alt="Los Angeles">
        </div>
    }
</div>

<!-- Left and right controls -->
<a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
</a>
<a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
</a>



