                            <div class="panel">
                                <h4 class="box-title text-left">
                                    <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
                                        @(ASS_35.Resources.HomeText.General_Information)<i class="ti-angle-down pull-right"></i>
                                    </a>
                                </h4>
                                <div id="collapseOne" class="panel-collapse collapse show">
                                    <div class="form-group text-left">
                                        <label class="control-label">@(ASS_35.Resources.HomeText.Authorities) <span style="color: red;">*</span></label>
                                        <select class="form-control" id="cbx-au">
                                            <option value="@SystemMessageConst.RoleConst.Phongvien">@(ASS_35.Resources.HomeText.Reporter) </option>
                                            <option value="@SystemMessageConst.RoleConst.Daibieu">@(ASS_35.Resources.HomeText.Delegate) </option>
                                        </select>
                                    </div>
                                    <div class="form-group text-left">
                                        <label class="control-label">@(ASS_35.Resources.HomeText.Type_of_Account) <span style="color: red;">*</span></label>
                                        <select class="form-control" id="cbx-type">
                                            <option value="1">@(ASS_35.Resources.HomeText.Personal)</option>
                                            <option value="2">@(ASS_35.Resources.HomeText.Group)</option>
                                        </select>
                                    </div>
                                    <div class="form-group text-left">
                                        <label class="control-label">@(ASS_35.Resources.HomeText.Country) <span style="color: red;">*</span></label>
