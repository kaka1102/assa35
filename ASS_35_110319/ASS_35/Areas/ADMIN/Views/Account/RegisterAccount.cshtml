    <script>
        $(function () {
            $("#txt-person-birth").datepicker({
                changeYear: true,
                yearRange: "1918:2017",
                dateFormat: "dd-mm-yy",
                altFormat: "dd-mm-yy"
            });
            $("#txt-date-range").datepicker({
                changeYear: true,
                yearRange: "1918:2017",
                dateFormat: "dd-mm-yy",
                altFormat: "dd-mm-yy"
            });
            $("#txt-date-exp").datepicker({
                changeYear: true,
                yearRange: "1918:2017",
                dateFormat: "dd-mm-yy",
                altFormat: "dd-mm-yy"
            });
            BindButtonSubmitClick();
            BindComboboxTypeChange();
            BindButtonComboboxAuthorChange();

            ChangeLanguage();
            var Cookie = getCookie('Language');
            if (Cookie == 'en') {
                $.ajax({
                    type: "POST",
                    url: "/Language/Change?LanguageAbbrevation=en",
                    contentType: false,
                    processData: false,
                    success: function (kq) {
                    }
                });
                $('#English').css('background', 'rgba(0,0,0,.1)');
            } else {
                $.ajax({
                    type: "POST",
                    url: "/Language/Change?LanguageAbbrevation=vi",
                    contentType: false,
                    processData: false,
                    success: function (kq) {

                    }
                });
                $('#VietNam').css('background', 'rgba(0,0,0,.1)');

            }
        });

        function BindComboboxTypeChange() {
            $("#cbx-type").change(function () {
                if ($(this).val() === "2") {
                    $("#person-container").css("display", "none");
                } else {
                    $("#person-container").css("display", "block");
                }
            });
        }

        function RegisterResult(data) {
            if (data.result.IsSuccess === false) {
                QTW_RUN_MESS.alter_Message_Error(data.result.Message);
            } else {
                QTW_RUN_MESS.alter_Message_Success(data.result.Message);
            }
        }

        function BindButtonComboboxAuthorChange(parameters) {
            $("#cbx-au").change(function () {
                if ($(this).val() === "@SystemMessageConst.RoleConst.Phongvien") {
                    $("#report-status").css("display", "block");
                } else {
                    $("#report-status").css("display", "none");
                }
            });
        }
        function BindButtonSubmitClick() {
            $("#btnsubmit").click(function () {
                var accEmail = $("#txt-account-email").val();
                var accType = $("#cbx-type").val();
                var accAu = $("#cbx-au").val();
                var companyName = $("#txt-company-name").val();
                var companyAddress = $("#txt-company-address").val();
                var companyFax = $("#txt-company-fax").val();
                var companyEmail = $("#txt-company-email").val();
                var companyPhone = $("#txt-company-phone").val();
                var companyCountry = $("#cbx-country").val();
                var companyFile = $("#file-doc")[0].files[0];
                var companyStatus = $("input[type='checkbox'][name='cbx-status']:checked").val();
                var personName = $("#txt-person-name").val();
                var personGender = $("#cbx-person-gender").val();
                var personBirth = $("#txt-person-birth").val();
                var personEmail = $("#txt-person-email").val();
                var personAddress = $("#txt-person-address").val();
                var personPhone = $("#txt-person-phone").val();
                var personPosition = $("#txt-person-position").val();
                var personCardId = $("#txt-id-card").val();
                var personDateRange = $("#txt-date-range").val();
                var personDateExp = $("#txt-date-exp").val();
                var personPressCarNo = $("#txt-number-press").val();
                var personImg1 = $("#txt-img-passport-back")[0].files[0];
                var personImg2 = $("#txt-img-passport-front")[0].files[0];
                var personImg3 = $("#txt-img-employee")[0].files[0];
                var personCardLocation = $("#txt-card-location").val();
                var personPark = $("input[type='checkbox'][name='cbx-park']:checked").val();
                var personRoom = $("input[type='checkbox'][name='cbx-room']:checked").val();
                var infomationData = {
                    accEmail: accEmail,
                    accType: accType,
                    accAu: accAu,
                    companyName: companyName,
                    companyAddress: companyAddress,
                    companyFax: companyFax,
                    companyEmail: companyEmail,
                    companyPhone: companyPhone,
                    companyCountry: companyCountry,
                    companyStatus: companyStatus,
                    personName: personName,
                    personGender: personGender,
                    personBirth: personBirth,
                    personEmail: personEmail,
                    personAddress: personAddress,
                    personPhone: personPhone,
                    personPosition: personPosition,
                    personCardId: personCardId,
                    personDateRange: personDateRange,
                    personDateExp: personDateExp,
                    personPressCarNo: personPressCarNo,
                    personCardLocation: personCardLocation,
                    personPark: personPark,
                    personRoom: personRoom
                };
                var formData = new FormData();
                formData.append("data", JSON.stringify(infomationData));
                formData.append("file1", companyFile);
                formData.append("file2", personImg1);
                formData.append("file3", personImg2);
                formData.append("file4", personImg3);
                var check = ValidateRegisterForm(infomationData, companyFile, personImg1, personImg2);
                if (check != null) {
                    QTW_RUN_MESS.alter_Message_Error(check);
                } else {
                    QTW_JQUERY.RUN_AJAX("ajaxPOST", "/Account/_RegisterAccount", formData, RegisterResult);
                }
            });
        }

        function ValidateRegisterForm(infomationData, companyFile, personImg1, personImg2) {
            var check = null;
            //   check = CheckRequiredField(infomationData.accEmail, 5, 50, "Email Đăng ký tài khoản");
            check = CheckRequiredField(infomationData.accEmail, 5, 200, "@Html.Raw(DisplayUntils.ReturnMessageBylanguage(SystemMessageConst.systemmessage.EmailRegisterAccount, SystemMessageConst.systemmessage.EmailRegisterAccountEn))");

            if (check != null) {
                return check;

            }
            //    check = CheckEmailFormat(infomationData.accEmail, "Email Đăng ký tài khoản");
            check = CheckEmailFormat(infomationData.accEmail, "@Html.Raw(DisplayUntils.ReturnMessageBylanguage(SystemMessageConst.systemmessage.EmailRegisterAccount, SystemMessageConst.systemmessage.EmailRegisterAccountEn))");
            if (check != null) {
                return check;
            }
            // check = CheckRequiredField(infomationData.companyName, 1, 50, "Tên cơ quan");
            check = CheckRequiredField(infomationData.companyName, 1, 200, "@Html.Raw(DisplayUntils.ReturnMessageBylanguage(SystemMessageConst.systemmessage.CompanyName, SystemMessageConst.systemmessage.CompanyNameEn))");

            if (check != null) {
                return check;
            }
            // check = CheckRequiredField(infomationData.companyAddress, 5, 50, "Địa chỉ cơ quan");
            check = CheckRequiredField(infomationData.companyAddress, 5, 200, "@Html.Raw(DisplayUntils.ReturnMessageBylanguage(SystemMessageConst.systemmessage.CompanyAddress, SystemMessageConst.systemmessage.CompanyAddressEn))");
            if (check != null) {
                return check;
            }

            if (infomationData.companyFax !== "" && infomationData.companyFax !== null) {

                // check = CheckFax(infomationData.companyFax, "Fax cơ quan");
                check = CheckFax(infomationData.companyFax, "@Html.Raw(DisplayUntils.ReturnMessageBylanguage(SystemMessageConst.systemmessage.CompanyFax, SystemMessageConst.systemmessage.CompanyFaxEn))");
                if (check != null) {
                    return check;
                }
            }
            // check = CheckRequiredField(infomationData.companyEmail, 5, 50, "Email công ty");
            check = CheckRequiredField(infomationData.companyEmail, 5, 200, "@Html.Raw(DisplayUntils.ReturnMessageBylanguage(SystemMessageConst.systemmessage.CompanyEmail, SystemMessageConst.systemmessage.CompanyEmailEn))");
            if (check != null) {
                return check;
            }
            //    check = CheckEmailFormat(infomationData.companyEmail, "Email công ty");
            check = CheckEmailFormat(infomationData.companyEmail, "@Html.Raw(DisplayUntils.ReturnMessageBylanguage(SystemMessageConst.systemmessage.CompanyEmail, SystemMessageConst.systemmessage.CompanyEmailEn))");
            if (check != null) {
                return check;
            }
            //   check = CheckPhone(infomationData.companyPhone, "Số điện thoại công ty");
            check = CheckPhone(infomationData.companyPhone, "@Html.Raw(DisplayUntils.ReturnMessageBylanguage(SystemMessageConst.systemmessage.CompanyPhone, SystemMessageConst.systemmessage.CompanyPhoneEn))");
            if (check != null) {
                return check;
            }
            if (companyFile == null) {
                //  return "File công văn không được để trống";
                return "@Html.Raw(DisplayUntils.ReturnMessageBylanguage(SystemMessageConst.systemmessage.FileDocumentary, SystemMessageConst.systemmessage.FileDocumentaryEn))";
            }
            if (infomationData.accType === "1") {
                //   check = CheckRequiredField(infomationData.personName, 2, 25, "Tên cá nhân");
                check = CheckRequiredField(infomationData.personName, 2, 200, "@Html.Raw(DisplayUntils.ReturnMessageBylanguage(SystemMessageConst.systemmessage.Fullname, SystemMessageConst.systemmessage.FullnameEn))");

                if (check != null) {
                    return check;
                }
                //  check = CheckRequiredField(infomationData.personAddress, 2, 50, "Địa chỉ cá nhân");
