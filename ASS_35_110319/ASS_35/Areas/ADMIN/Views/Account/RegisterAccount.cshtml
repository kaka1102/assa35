                                        <label class="control-label">@(ASS_35.Resources.HomeText.Company_Name) <span style="color: red;">*</span></label>
                                        <input type="text" class="form-control" id="txt-company-name" placeholder="@(ASS_35.Resources.HomeText.Company_Name)">
                                    </div>
                                    <div class="form-group text-left">
                                        <label class="control-label">@(ASS_35.Resources.HomeText.Company_Address) <span style="color: red;">*</span></label>
                                        <input type="text" class="form-control" id="txt-company-address" placeholder="@(ASS_35.Resources.HomeText.Company_Address)">
                                    </div>
                                    <div class="form-group text-left">
                                        <label class="control-label">@(ASS_35.Resources.HomeText.Fax)</label>
                                        <input type="text" class="form-control" id="txt-company-fax" placeholder="Fax">
                                    </div>
                                    <div class="form-group text-left">
                                        <label class="control-label">@(ASS_35.Resources.HomeText.Company_Email) <span style="color: red;">*</span></label>
                                        <input type="text" class="form-control" id="txt-company-email" placeholder="Example@domain.com">
                                    </div>
                                    <div class="form-group text-left">
