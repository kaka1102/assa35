                return "@Html.Raw(DisplayUntils.ReturnMessageBylanguage(SystemMessageConst.ValidateConst.CheckNotEmpty, SystemMessageConst.ValidateConst.CheckNotEmptyEn))".format(name);
            }
            if (data.length < min || data.length > max) {
                //  return "Độ dài " + name + " phải nhỏ hơn " + max + " và lớn hơn " + min;
                return "@Html.Raw(DisplayUntils.ReturnMessageBylanguage(SystemMessageConst.ValidateConst.MinMaxlengthOfText, SystemMessageConst.ValidateConst.MinMaxlengthOfTextEn))".format(name, max, min);

            }
            return null;
        }

